                addDataset(ivChart, [], { data: [result.data.stats.iv_40_49], backgroundColor: 'blue', label: '40-49% IV' });
                addDataset(ivChart, [], { data: [result.data.stats.iv_50_59], backgroundColor: 'red', label: '50-59% IV' });
