                                        <div class="row text-center">
                                            <div class="col-4">
                                                <img id="evo1" src="#" height=72 width=72/><br>
                                                <b id="evo1-text"></b>
                                            </div>
                                            <div class="col-4">
                                                <img id="evo2" src="#" height=72 width=72/><br>
                                                <b id="evo2-text"></b>
                                            </div>
                                            <div class="col-4 justify-content-end">
                                                <img id="evo3" src="#" height=72 width=72/><br>
                                                <b id="evo3-text"></b>
                                            </div>
                                        </div>
                                    </div>
