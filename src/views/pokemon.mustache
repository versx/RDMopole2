    });

    $("#heatmap-end").flatpickr({
        altInput: true,
        altFormat: "F j, Y h\:00 K",
        dateFormat: "U",//"Y-m-d h K",
        enableTime: true
    });

    $("#commday-start").flatpickr({
        altInput: true,
        altFormat: "F j, Y h\:00 K",
        dateFormat: "U",//"Y-m-d h K",
        enableTime: true
    });

    $("#commday-end").flatpickr({
        altInput: true,
        altFormat: "F j, Y h\:00 K",
        dateFormat: "U",//"Y-m-d h K",
        enableTime: true
    });

    $("#shiny-date").flatpickr({
        altInput: true,
        altFormat: "F j, Y",
